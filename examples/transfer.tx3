env {
    tax: Int,
}

party Sender;

party Receiver;

party Middleman;

tx transfer(
    quantity: Int
) {
    input source {
        from: Sender,
        min_amount: Ada(quantity) + tax,
    }
    
    output {
        to: Receiver,
        amount: Ada(quantity),
    }

    output {
        to: Middleman,
        amount: Ada(tax),
    }

    output {
        to: Sender,
        amount: source - Ada(quantity) - fees,
    }
}
